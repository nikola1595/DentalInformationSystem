<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentalInformationSystem</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap-medi.min.css" rel="stylesheet" />
    @*<link href="~/lib/bootstrap/dist/css/bootstrap-medi.css" rel="stylesheet" />*@
    @*<link href="~/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />*@
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dental Information System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Patients" asp-action="Index">Pacijenti</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Protocols" asp-action="Index">Protokol bolesnika</a>
                        </li>

                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Therapies" asp-action="Index">Cenovnik</a>
                        </li>

                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Expenses" asp-action="Index">Rashodi</a>
                        </li>


                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Procurements" asp-action="Index">Nabavke</a>
                        </li>



                    </ul>
                </div>

            </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Unos novih stavki
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Anamneses" asp-action="Create">Unos novu anamneze</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Diagnoses" asp-action="Create">Unesi novu diagnozu</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="ExpensesTypes" asp-action="Create">Unos novog tipa rashoda</a>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Suppliers" asp-action="Create">Unesi novog dobavljača</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - DentalInformationSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-medi.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
