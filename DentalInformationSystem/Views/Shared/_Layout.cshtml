@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DentalInformationSystem</title>
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dental Information System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                    <partial name="_LoginPartial" />
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Patients" asp-action="Index">Pacijenti</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Protocols" asp-action="Index">Protokol bolesnika</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Therapies" asp-action="Index">Cenovnik</a>
                            </li>

                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Finances" asp-action="Index">Finansije</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Procurements" asp-action="Index">Nabavke</a>
                            </li>
                        </ul>
                    }

                </div>

            </div>
            @if (SignInManager.IsSignedIn(User))
            {

                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Unos novih stavki
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Anamneses" asp-action="Create">Unos novu anamneze</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Diagnoses" asp-action="Create">Unesi novu diagnozu</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ExpensesTypes" asp-action="Create">Unos novog tipa rashoda</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Suppliers" asp-action="Create">Unesi novog dobavljača</a>
                    </div>
                </div>

            }

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Nikola Ilić - 2020 - DentalInformationSystem
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
