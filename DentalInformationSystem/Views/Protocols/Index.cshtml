@model IEnumerable<DentalInformationSystem.Models.Protocol>

@{
    ViewData["Title"] = "Protokol";
}

<h1>Protokol</h1>

<p>
    @Html.ActionLink("Dodaj novog pacijenta u protokol", "Create", "Protocols", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProtocolID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
