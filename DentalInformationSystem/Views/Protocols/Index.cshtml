            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
                </td>*@

            <td>
                @Html.DisplayFor(modelItem => item.Anamnesis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosis.DiagnosisNameLatin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Therapy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Signet)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProtocolID">Izmeni</a> |
                <a asp-action="Details" asp-route-id="@item.ProtocolID">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.ProtocolID">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
