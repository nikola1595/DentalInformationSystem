           </div>*@
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Izaberite anamnezu</label>
                <input type="search" list="data4" placeholder="unesi anamnezu" id="searchid" name="Anamneza" class="form-control" />
                <datalist id="data4">
                    @foreach (var item in ViewBag.Anamneza)
                    {
                        <option value="@item.AnamnesisName"></option>
                    }
                </datalist>
            </div>
            @*<div class="form-group">
                    <label asp-for="Anamnesis" class="control-label"></label>
                    <input asp-for="Anamnesis" class="form-control" />
                    <span asp-validation-for="Anamnesis" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label>Izaberite dijagnozu</label>
                <input type="search" list="data1" placeholder="unesi dijagnozu" id="searchid" name="Dijagnoza" class="form-control" />
                <datalist id="data1">
                    @foreach (var item in ViewBag.Dijagnoza)
                    {
                        <option value="@item.DiagnosisNameSrb">@item.DiagnosisCode | @item.DiagnosisNameSrb | @item.DiagnosisNameLatin</option>
                    }
                </datalist>
            </div>
            @*<div class="form-group">

                    <label asp-for="Diagnosis" class="control-label">Izaberite dijagnozu</label>
                    <select asp-for="DiagnosisID" class="form-control" id="DiagnosisID" asp-items="@ViewBag.DiagnosisID"></select>
                    <span asp-validation-for="DiagnosisID" class="text-danger"></span>
                </div>*@

            <div class="form-group">
                <label>Izaberite terapiju</label>
                <input type="search" list="data3" placeholder="Unesite terapiju" id="searchid" name="Terapija" class="form-control" />
                <datalist id="data3">
                    @foreach (var item in ViewBag.Terapija)
                    {
                        <option value="@item.TherapyName"></option>
                    }
                </datalist>
            </div>
            <br />
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <textarea id="Notes" class="form-control" name="Notes" rows="4" cols="50"></textarea>
                </div>
            </div>


            <div class="form-group">
                    <label asp-for="PaidFavor" class="control-label"></label>
                    @Html.CheckBoxFor(m => m.PaidFavor)
            </div>
            <br />


