@model DentalInformationSystem.Models.Protocol

@{
    ViewData["Title"] = "Unos pacijenta u protokol";
}

<h1>Unos pacijenta u protokol</h1>

<style>
    input[type=checkbox] {
        -ms-transform: scale(2); /* IE */
        -moz-transform: scale(2); /* FF */
        -webkit-transform: scale(2); /* Safari and Chrome */
        -o-transform: scale(2); /* Opera */
        width: 15px;
        height: 15px;
        margin-left: 5px;
        vertical-align: middle;
    }
</style>



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Izaberite pacijenta</label>
                <input type="search" required list="data2" placeholder="unesite pacijenta" id="searchid" name="Pacijent" class="form-control" />
                <datalist id="data2">
                    @foreach (var item in ViewBag.Pacijent)
                    {
                        <option value="@item.Name @item.Surname " style="font-size:18px"></option>
                    }
                </datalist>
                @Html.ValidationMessageFor(m => m.PatientID, "", new { @class = "text-danger" })
                
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Izaberite anamnezu</label>
                <input type="search" required list="data4" placeholder="unesi anamnezu" id="searchid" name="Anamneza" class="form-control" />
                <datalist id="data4">
                    @foreach (var item in ViewBag.Anamneza)
                    {
                        <option value="@item.AnamnesisName"></option>
                    }
                </datalist>
                @Html.ValidationMessageFor(m => m.AnamnesisID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Izaberite dijagnozu</label>
                <input type="search" required list="data1" placeholder="unesi dijagnozu" id="searchid" name="Dijagnoza" class="form-control" />
                <datalist id="data1">
                    @foreach (var item in ViewBag.Dijagnoza)
                    {
                        <option value="@item.DiagnosisNameSrb">@item.DiagnosisCode | @item.DiagnosisNameSrb | @item.DiagnosisNameLatin</option>
                    }
                </datalist>
                @Html.ValidationMessageFor(m => m.DiagnosisID, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Izaberite terapiju</label>
                <input type="search" required list="data3" placeholder="Unesite terapiju" id="searchid" name="Terapija" class="form-control" />
                <datalist id="data3">
                    @foreach (var item in ViewBag.Terapija)
                    {
                        <option value="@item.TherapyName"></option>
                    }
                </datalist>
                @Html.ValidationMessageFor(m => m.TherapyID, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Notes" class="control-label"></label>
                    <textarea id="Notes" class="form-control" name="Notes" rows="4" cols="50"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PaidFavor" class="control-label"></label>
                @Html.CheckBoxFor(m => m.PaidFavor)
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Unesi u protokol" class="btn btn-primary" />
            </div>
            @Html.ActionLink("Nazad na protokol", "Index", "Protocols", null, new { @class = "btn btn-secondary" })
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
