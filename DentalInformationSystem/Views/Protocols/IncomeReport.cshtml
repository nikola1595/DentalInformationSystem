@model IEnumerable<DentalInformationSystem.Models.Protocol>

@{
    ViewData["Title"] = "Prihodi";
    Layout = null;
}

    <style>
        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding:5px;
            text-align: left;
            font-size: 20px;
            padding-right:5px;
        }

        #IncomeTable tr:nth-child(even) {
            background-color: #eee;
        }

        #IncomeTable tr:nth-child(odd) {
            background-color: #fff;
        }

        #IncomeTable th {
            background-color: teal;
            color: white;
        }

        thead {
            display: table-header-group
        }

        tfoot {
            display: table-row-group
        }

        tr {
            page-break-inside: avoid
        }

    </style>



<h1 style="text-align:center">Prihodi</h1>

<table align="center" style="border:black" class="table cell-border table-hover" id="IncomeTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Therapy.TherapyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Therapy.Price)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @{ 
            decimal CalculatedPrice = 0;
        }
        @foreach (var item in Model)
        {
            CalculatedPrice += item.Therapy.Price;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Therapy.TherapyName)
                </td>
                <td>
                    @item.Therapy.Price.ToString("0") din
                </td>
                
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" style="text-align:right; padding-right:5px">Ukupan prihod:@CalculatedPrice din </th>
            
        </tr>
    </tfoot>
</table>





