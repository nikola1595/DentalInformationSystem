@model DentalInformationSystem.Models.Diagnosis

@{
    ViewData["Title"] = "Izmena podataka";
}

<h4>Izmena podataka</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiagnosisID" />
            <div class="form-group">
                <label asp-for="DiagnosisCode" class="control-label"></label>
                <input asp-for="DiagnosisCode" class="form-control" />
                <span asp-validation-for="DiagnosisCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiagnosisNameSrb" class="control-label"></label>
                <input asp-for="DiagnosisNameSrb" class="form-control" />
                <span asp-validation-for="DiagnosisNameSrb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiagnosisNameLatin" class="control-label"></label>
                <input asp-for="DiagnosisNameLatin" class="form-control" />
                <span asp-validation-for="DiagnosisNameLatin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj izmene" class="btn btn-primary" />
            </div>
            @Html.ActionLink("Nazad na listu dijagnoza", "Index", "Diagnoses", null, new { @class = "btn btn-secondary" })
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
