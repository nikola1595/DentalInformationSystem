@model DentalInformationSystem.Models.Diagnosis

@{
    ViewData["Title"] = "Brisanje";
}

<h1>Brisanje</h1>

<h3>Da li ste sigurni da želite da obrišete ovaj podatak?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiagnosisNameSrb)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiagnosisNameSrb)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiagnosisNameLatin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiagnosisNameLatin)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DiagnosisID" />
        <input type="submit" value="Obriši podatke o dijagnozi" class="btn btn-danger" />
    </form>
    <div>
        <br />
        @Html.ActionLink("Nazad na listu dijagnoza", "Index", "Diagnoses", null, new { @class = "btn btn-secondary" })
    </div>
</div>
