@model DentalInformationSystem.Models.Therapy

@{
    ViewData["Title"] = "Izmeni stavku u cenovniku";
}

<h1>Izmena stavke u cenovniku</h1>

<h4>@Model.TherapyName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TherapyID" />
            <div class="form-group">
                <label asp-for="TherapyName" class="control-label"></label>
                <input asp-for="TherapyName" class="form-control" />
                <span asp-validation-for="TherapyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
            @Html.ActionLink("Nazad na cenovnik", "Index", "Therapies", null, new { @class = "btn btn-secondary" })
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
