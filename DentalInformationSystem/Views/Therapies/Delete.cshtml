@model DentalInformationSystem.Models.Therapy

@{
    ViewData["Title"] = "Brisanje stavke iz cenovnika";
}

<h1>Brisanje stavke iz cenovnika</h1>

<h3>Da li ste sigurni da želite da obrišete ovu stavku?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TherapyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TherapyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TherapyID" />
        <input type="submit" value="Obriši stavku iz cenovnika" class="btn btn-danger" />
        
        <div>
            <br />
            @Html.ActionLink("Nazad na cenovnik", "Index", "Therapies", null, new { @class = "btn btn-secondary" })
        </div>
    </form>
</div>
