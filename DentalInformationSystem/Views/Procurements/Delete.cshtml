@model DentalInformationSystem.Models.Procurement

@{
    ViewData["Title"] = "Brisanje";
}

<h4>Brisanje</h4>

<h3>Da li ste sigurni da želite da obrišete ovu stavku?</h3>
<div>
    <h4>Nabavka: @Model.DeliveryNoteNumber</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProcurementDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProcurementDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier.SupplierName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.SupplierName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryNoteNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryNoteNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MerchandiseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MerchandiseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeasureUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeasureUnit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice) din
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProcurementID" />
        <input type="submit" value="Obriši podatke o nabavci" class="btn btn-danger" />
        @Html.ActionLink("Nazad na listu nabavki", "Index", "Procurements", null, new { @class = "btn btn-secondary" })
    </form>
   
</div>
